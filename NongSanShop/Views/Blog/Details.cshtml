@model NongSanShop.Models.dh_blog

@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div>
        <h4>Chi tiết</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tiêu đề
            </dt>

            <dd>
                @Html.DisplayFor(model => model.thumbnail)
            </dd>

            <dt>
                Nội dung
            </dt>

            <dd>
                @Html.DisplayFor(model => model.content)
            </dd>

            <dt>
                Thời gian tạo
            </dt>

            <dd>@{
                    var timeStampCreated = Model.created;
                    @Html.Display(DateTimeOffset.FromUnixTimeSeconds(timeStampCreated.GetValueOrDefault()).ToString("MM/dd/yyyy"))
                }
            </dd>

            <dt>
                Thời gian cập nhật
            </dt>

            <dd>
                @{
                    var timeStampUpdated = Model.updated;
                    @Html.Display(DateTimeOffset.FromUnixTimeSeconds(timeStampUpdated.GetValueOrDefault()).ToString("MM/dd/yyyy"))
                }
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.id }) |
        @Html.ActionLink("Quay lại", "Index")
    </p>
</div>


