@using NongSanShop.Common
@model PagedList.IPagedList<NongSanShop.Models.dh_user>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <h3 class="text-dark mb-4">Tài khoản</h3>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">
                @Html.ActionLink("Thêm mới", "Create")
            </p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-nowrap">
                    <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                        <label>
                            Hiển thị&nbsp;<select class="form-control form-control-sm custom-select custom-select-sm">
                                <option value="10" selected="">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>&nbsp;
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-md-right dataTables_filter" id="dataTable_filter"><label><input type="search" class="form-control form-control-sm" aria-controls="dataTable" placeholder="Tìm kiếm"></label></div>
                </div>
            </div>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Tên đăng nhập
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Tên người dùng
                            </th>
                            <th>
                                Quyền
                            </th>
                            <th>
                                Thời gian tạo
                            </th>
                            <th>
                                Thời gian cập nhật
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.role)
                                </td>
                                <td>
                                    @{
                                        if (item.created.GetValueOrDefault() > 0)
                                        {
                                            @DateTimeOffset.FromUnixTimeSeconds(item.created.GetValueOrDefault()).ToString(Constants.DateTimePattern.DefaultDateTimePattern)
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        if (item.updated.GetValueOrDefault() > 0)
                                        {
                                            @DateTimeOffset.FromUnixTimeSeconds(item.updated.GetValueOrDefault()).ToString(Constants.DateTimePattern.DefaultDateTimePattern)
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.id }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.id })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td>
                                <strong>
                                    Tên đăng nhập
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    Email
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    Tên người dùng
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    Quyền
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    Thời gian tạo
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    Thời gian cập nhật
                                </strong>
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

